{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build",
            "command": "g++ ${file} -std=c++11 -o ${fileBasenameNoExtension}", //-I /usr/include/python3.6m -lpython3.6m -I ${workspaceFolder}/include include/hermite.o include/Faddeeva.o 
            
            "problemMatcher": "$gcc",
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Build & Run",
            "command": "./${fileBasenameNoExtension}",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "Build"
        },
    ]
}